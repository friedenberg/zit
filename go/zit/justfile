deploy-docker: build-docker
  docker tag zit:latest idealnesswagon5/zit:latest
  docker push idealnesswagon5/zit:latest

deploy-github: \
    build-go \
    test \
    (git-add-and-commit \
      "." \
      "../../{zz-pandoc,zz-vim,zz-tests_bats}" \
      "gomod2nix.toml")

deploy: deploy-github deploy-docker
