@stats-bats-skipped:
  echo -n "skipped bats tests: "
  ag '^\s+skip' zz-tests_bats/ -c | cut -d: -f2 | paste -s -d + - | bc

@stats-todos:
  #! /usr/bin/env -S fish
  echo -n "todos: "
  count-pattern '(//|#)\s*todo[-\w]*' src zz-tests_bats/ | sort -n -r

@stats: stats-bats-skipped

