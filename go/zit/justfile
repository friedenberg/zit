test-go-unit:
  go test -v ./...

test-go: test-go-unit

test-bats $PATH=(dir_build + ":" + env("PATH")):
  just zz-tests_bats/test-bats-generate "$(build/zit info)"
  just zz-tests_bats/test

test: test-go test-bats

